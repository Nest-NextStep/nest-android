<!-- res/layout/item_test_result.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/border_background"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/icon_test_result"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_test_result" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_assessment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assessment 1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_recommended_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your recommended Major"
            android:textColor="@color/black"
            android:background="@drawable/rounded_pill"
            android:padding="8dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</LinearLayout>
