<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="top|start"
        android:id="@+id/backButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="?attr/colorPrimary"
        android:contentDescription="@string/back"
        app:srcCompat="@drawable/ic_back_arrow"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:fabCustomSize="36dp"
        app:shapeAppearanceOverlay="@style/RoundedFAB"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.main.profile.edit.EditProfileFragment"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="@string/edit_profile"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textAppearance="@style/TextAppearance.Heading3"
                />

            <TextView
                android:id="@+id/fullNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="32dp"
                android:text="@string/full_name"
                app:drawableEndCompat="@drawable/ic_asterisk"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextAppearance.Heading5"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fullNameEditTextLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fullNameTextView"
                app:hintEnabled="false"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fullNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/full_name_placeholder"
                    android:ems="10"
                    android:inputType="textVisiblePassword|textNoSuggestions"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/birthDateTextView"
                app:drawableEndCompat="@drawable/ic_asterisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/birth_date"
                app:layout_constraintTop_toBottomOf="@id/fullNameEditTextLayout"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextAppearance.Heading5"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/birthDateEditTextLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/birthDateTextView"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconTint="?attr/colorSecondaryVariant"
                app:endIconMode="custom"
                app:hintEnabled="false"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/birthDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/birth_date_placeholder"
                    android:ems="10"
                    android:inputType="date"
                    android:enabled="false"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/genderTextView"
                app:drawableEndCompat="@drawable/ic_asterisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/gender"
                app:layout_constraintTop_toBottomOf="@id/birthDateEditTextLayout"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextAppearance.Heading5"
                />
            <RadioGroup
                android:id="@+id/radioGender"
                app:layout_constraintTop_toBottomOf="@id/genderTextView"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/gender_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/male"/>
                <RadioButton
                    android:id="@+id/gender_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/female"/>
                <RadioButton
                    android:id="@+id/gender_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/others"/>
            </RadioGroup>
            <TextView
                android:id="@+id/genderErrorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="24dp"
                android:text="@string/empty_field"
                app:layout_constraintTop_toBottomOf="@id/radioGender"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp"
                android:textColor="@color/red_error"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/educationTextView"
                app:drawableEndCompat="@drawable/ic_asterisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:text="@string/last_education"
                app:layout_constraintTop_toBottomOf="@id/radioGender"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextAppearance.Heading5"
                />
            <RadioGroup
                android:id="@+id/radioEducation"
                app:layout_constraintTop_toBottomOf="@id/educationTextView"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/education_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_education_1"/>
                <RadioButton
                    android:id="@+id/education_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_education_2"/>
                <RadioButton
                    android:id="@+id/education_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_education_3"/>
                <RadioButton
                    android:id="@+id/education_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_education_4"/>
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/schoolEditTextLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioEducation"
                app:hintEnabled="false"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/schoolEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/current_school_placeholder"
                    android:ems="10"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/religionTextView"
                app:drawableEndCompat="@drawable/ic_asterisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/agama"
                app:layout_constraintTop_toBottomOf="@id/schoolEditTextLayout"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextAppearance.Heading5"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/menuReligion"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/religionTextView"
                android:layout_marginHorizontal="24dp"
                android:maxHeight="50dp"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/menuReligionOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:hint="@string/agama"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/engNatTextView"
                app:drawableEndCompat="@drawable/ic_asterisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/eng_nat"
                app:layout_constraintTop_toBottomOf="@id/menuReligion"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextAppearance.Heading5"
                />
            <RadioGroup
                android:id="@+id/radioEngNat"
                app:layout_constraintTop_toBottomOf="@id/engNatTextView"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/engNat_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ya"/>
                <RadioButton
                    android:id="@+id/engNat_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tidak"/>
            </RadioGroup>
            <TextView
                android:id="@+id/engNatErrorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="24dp"
                android:text="@string/empty_field"
                app:layout_constraintTop_toBottomOf="@id/radioEngNat"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp"
                android:textColor="@color/red_error"
                android:visibility="invisible"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/radioEngNat"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="32dp"
                android:paddingBottom="32dp">

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="@string/submit"
                    />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="?attr/colorPrimary"
                    android:visibility="gone" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>